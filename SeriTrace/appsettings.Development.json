{
  "Serilog": {
    "MinimumLevel": "Debug",
    "Properties": {
      "Environment": "Development"
    },
    "Enrich": ["WithMachineName", "WithThreadId", "WithCorrelationId"],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "Theme": "Literate"
        }
      },
      {
        "Name": "File",
        "Args": {
          "RetainedFileCountLimit": 7
        }
      }
    ],
    "RequestResponseLogging": {
      "Requests": {
        "MinimumLevel": "Debug",
        "RetainedFileCountLimit": 7,
        "MaxRequestBodySize": 65536
      },
      "Responses": {
        "MinimumLevel": "Debug",
        "RetainedFileCountLimit": 7,
        "MaxResponseBodySize": 65536
      }
    }
  }
}