{
  // Main Serilog configuration section
  "Serilog": {
    // List of used extensions (e.g. sinks, enrichers, extensions)
    // Default: empty, e.g. ["Serilog.Sinks.Console", "Serilog.Enrichers.Environment"]
    "Using": [],

    // Global minimum logging level (Verbose, Debug, Information, Warning, Error, Fatal)
    "MinimumLevel": "Information",

    // Logging level overrides for namespaces
    // Example: { "Microsoft": "Warning", "System": "Error" }
    "Override": {},

    // Global properties added to every log event
    // Example: { "Application": "SeriTrace", "Environment": "Development" }
    "Properties": {},

    // List of log enrichers (e.g. CorrelationId, MachineName)
    // Example: ["WithMachineName", "WithThreadId", "WithCorrelationId"]
    "Enrich": [],

    // Log sinks configuration (destinations)
    "WriteTo": [
      {
        // Sink name, e.g. "Console", "File", "Seq"
        "Name": "Console",
        "Args": {
          // Log output template
          "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}",
          // Minimum log level for this sink (optional)
          "RestrictedToMinimumLevel": null,
          // Console theme (optional, e.g. "Literate", "Grayscale")
          "Theme": null
        }
      },
      {
        "Name": "File",
        "Args": {
          // Log file path
          "Path": "logs/app-.log",
          // File rolling interval (Day, Hour, Month, Year, Infinite)
          "RollingInterval": "Day",
          // File size limit in bytes
          "FileSizeLimitBytes": 1073741824,
          // Roll on file size limit
          "RollOnFileSizeLimit": true,
          // Number of retained log files
          "RetainedFileCountLimit": 31,
          // Shared mode (multi-process)
          "Shared": false,
          // Log output template
          "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}",
          // Minimum log level for this sink (optional)
          "RestrictedToMinimumLevel": null
        }
      }
    ],

    // Logging filters configuration
    // Allows excluding or including logs based on expressions
    "Filter": [
      // Example:
      // { "Name": "ByExcluding", "Expression": "Contains(RequestPath, '/health')" }
    ],

    // Object destructuring configuration for logs
    "Destructure": {
      // Maximum object destructuring depth
      "MaxDepth": 10,
      // Maximum string length
      "MaxStringLength": 1024,
      // Maximum number of items in collections
      "MaxCollectionCount": 10,
      // Whether to treat collections as objects
      "DestructureByInterfaceAsObject": false
    },

    // Dedicated HTTP request and response logging configuration
    "RequestResponseLogging": {
      // HTTP request logging
      "Requests": {
        // Enable request logging
        "Enabled": true,
        // Request log file path
        "LogPath": "logs/requests/requests-.log",
        // Minimum logging level
        "MinimumLevel": "Information",
        // File rolling interval
        "RollingInterval": "Day",
        // File size limit
        "FileSizeLimitBytes": 536870912,
        // Number of retained log files
        "RetainedFileCountLimit": 31,
        // Log request body
        "LogRequestBody": true,
        // Maximum logged request body size (bytes)
        "MaxRequestBodySize": 32768,
        // Log request headers
        "LogRequestHeaders": true,
        // List of headers excluded from logging
        "ExcludedHeaders": [
          "Authorization",
          "Cookie",
          "Set-Cookie",
          "X-API-Key",
          "X-Auth-Token"
        ],
        // Content-Types excluded from body logging
        "ExcludedContentTypes": [
          "multipart/form-data",
          "application/octet-stream",
          "image/*",
          "video/*",
          "audio/*",
          "application/pdf",
          "application/zip"
        ],
        // URL paths excluded from logging
        "ExcludedPaths": [
          "/health",
          "/metrics",
          "/swagger"
        ],
        // Request log output template
        "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{CorrelationId}] REQUEST: {RequestMethod} {RequestPath} {Message:lj} {Properties:j}{NewLine}"
      },
      // HTTP response logging
      "Responses": {
        // Enable response logging
        "Enabled": true,
        // Response log file path
        "LogPath": "logs/responses/responses-.log",
        // Minimum logging level
        "MinimumLevel": "Information",
        // File rolling interval
        "RollingInterval": "Day",
        // File size limit
        "FileSizeLimitBytes": 536870912,
        // Number of retained log files
        "RetainedFileCountLimit": 31,
        // Log response body
        "LogResponseBody": true,
        // Maximum logged response body size (bytes)
        "MaxResponseBodySize": 32768,
        // Log response headers
        "LogResponseHeaders": true,
        // List of headers excluded from logging
        "ExcludedHeaders": [
          "Set-Cookie",
          "X-Internal-Token"
        ],
        // Content-Types excluded from body logging
        "ExcludedContentTypes": [
          "application/octet-stream",
          "image/*",
          "video/*",
          "audio/*",
          "application/pdf",
          "application/zip"
        ],
        // Status codes excluded from response body logging
        "ExcludedStatusCodes": [
          204,
          304
        ],
        // URL paths excluded from logging
        "ExcludedPaths": [
          "/health",
          "/metrics",
          "/swagger"
        ],
        // Response log output template
        "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{CorrelationId}] RESPONSE: {StatusCode} {RequestPath} in {Duration}ms {Message:lj} {Properties:j}{NewLine}"
      }
    }
  }
}
